import strings

fun test_builder() {
	mut b := strings.new_builder(50)

	b.write_chars([104 as u8, 101 as u8]) // FIXME second u8 cast should not be needed
	assert b.str() == 'he'

	b.write('llo')
	assert b.str() == 'hello'

	b.clear()
	assert b.str().length == 0

	b.write('foo')
	assert b.str() == 'foo'
}
