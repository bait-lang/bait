import bait.lexer

const TEXT := '// my comment
package test
//   spaces
// above'

fun test_discard_mode() {
	mut l := lexer.Lexer{}
	l.init(TEXT, .discard)

	assert l.next() == .key_package

	assert l.next() == .name
	assert l.val() == 'test'
}

fun test_store_mode() {
	mut l := lexer.Lexer{}
	l.init(TEXT, .store)

	assert l.next() == .comment
	assert l.val() == ' my comment'

	_ = l.next()
	_ = l.next()

	assert l.next() == .comment
	assert l.val() == '   spaces'

	assert l.next() == .comment
}

const MANY_COMMENTS := '// 1
// 2
    // 3, space indent
// 4
	// 5, tab indent
// 6'

fun test_skip_comments() {
	mut l := lexer.Lexer{}
	l.init(MANY_COMMENTS, .discard)

	l.skip_comments()
	assert l.pos().line == 7
}
