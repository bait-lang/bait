import bait.lexer

fun test_valid_numbers() {
	mut l := lexer.Lexer{}

	l.init('123', .discard)
	assert l.next() == .number
	assert l.val == '123'

	l.init('12.34', .discard)
	assert l.next() == .number
	assert l.val == '12.34'

	l.init('0b0101', .discard)
	assert l.next() == .number
	assert l.val == '0b0101'

	l.init('0o755', .discard)
	assert l.next() == .number
	assert l.val == '0o755'

	l.init('0xff', .discard)
	assert l.next() == .number
	assert l.val == '0xff'
}

fun test_leading_zero() {
	mut l := lexer.Lexer{}

	// Valid: single zero
	l.init('0', .discard)
	assert l.next() == .number

	// Valid: zeros in fraction
	l.init('0.001', .discard)
	assert l.next() == .number
	assert l.val == '0.001'

	// Invalid: leading zeros
	l.init('00', .discard)
	assert l.next() == .error

	l.init('012', .discard)
	assert l.next() == .error
}
