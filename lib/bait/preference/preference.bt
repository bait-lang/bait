package preference

import os
import bait.errors

pub enum Backend {
	js
	c
}

pub struct Prefs {
	command string
	args []string
	out_name string
	should_run bool
	is_verbose bool
	backend Backend
	expected_pkg string

	// Compile mode
	is_test bool
	is_script bool
	is_library bool

	// Error related
	hide_warnings bool
	warn_is_error bool

	// Values for compile time pseudo variables
	baitexe string
	baitdir string
	baithash string
}

pub fun parse_args(args []string) Prefs {
	p := Prefs{
		backend = .js
	}
	// Default action in case of no arguments: help
	if args.length == 0 {
		p.command = 'help'
		return p
	}

	// Parse options and commands
	for i := 0; i < args.length; i += 1{
		arg := args[i]
		match arg {
			'-b', '--backend' {
				i += 1
				p.backend = backend_from_string(args[i])
			}
			"-o", '--out' {
				i += 1
				p.out_name = args[i]
				p.args.push(arg)
				p.args.push(p.out_name)
			}
			'-v', '--verbose' {
				p.is_verbose = true
				p.args.push(arg)
			}
			'--library' {
				p.is_library = true
			}
			'-w' {
				p.hide_warnings = true
				p.args.push(arg)
			}
			'-W' {
				p.warn_is_error = true
				p.args.push(arg)
			}
			'--nocolor' {
				os.setenv('BAITCOLOR', '0')
			}
			'--script' {
				p.is_script = true
			}
			else{
				if p.command.length == 0 {
					p.command = arg
				} else {
					p.args.push(arg)
				}
			}
		}
	}

	if p.hide_warnings and p.warn_is_error {
		errors.generic_error('Cannot use -w and -W together.')
		exit(1)
	}

	// `build` is just an optional alias and replaced with the filepath
	if p.command == 'build' {
		p.command = p.args[0]
	}
	// `run` is the same but with `should_run` set to true
	if p.command == 'run' {
		p.command = p.args[0]
		p.should_run = true
	}

	if p.command == 'test' {
		p.should_run = true
		p.is_test = true
	}

	// Set default out name if empty
	if p.out_name.length == 0 {
		if p.command.ends_with('.bt') {
			p.out_name = p.command.replace('.bt', '.js')
		} else {
			p.out_name = p.command + '.js'
		}
	}

	return p
}

pub fun (p Prefs) set_comptime_vars() {
	p.baitexe = os.executable()
	p.baitdir = os.dir(p.baitexe)
	p.baithash = os.exec('git rev-parse --short HEAD').stdout.trim_space()
}

fun backend_from_string(s string) Backend {
	match s {
		'js' { return .js }
		'c' { return .c }
	}
	// TODO error
	return .js
}
