fun test_init_with_length() {
	a := []i32{ length = 2 }
	assert a == [0, 0]

	b := []string{ length = 3 }
	assert b == ["", "", ""]
}

fun test_typeless_init() {
	mut a := [1,2,3]
	a = []
	assert a.length == 0

	// Names on the next line are not the element type
	mut b := ['']
	b = []
	myvar := 12
	assert b.length == 0
	assert myvar == 12
}
