fun test_simple_interpolation(){
	greet := 'hello'
	to := 'world'
	assert '${greet} ${to}' == 'hello world'
}

fun test_escape_backtick(){
	x := 'a'
	assert '` ${x}' == '` a'
}

fun test_escape_dollar() {
	x := 'a'
	assert '\${x} ${x}' == '\${x} a'
}
