import os
import bait.util.testing

const DIR := os.dir($FILE)

fun test_in_outs() {
	testing.in_out_runner(testing.InOutRunner{
		root: '${DIR}/inout'
		check_stdout: true
	})
}

fun test_error_in_outs() {
	testing.in_out_runner(testing.InOutRunner{
		root: '${DIR}/inout_error'
		cmd_options: '--script'
	})
}

fun test_errors_no_script_mode() {
	testing.in_out_runner(testing.InOutRunner{
		root: '${DIR}/inout_no_script'
	})
}
