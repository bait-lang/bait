package testing

import os

pub fun build_file(dir string, file string) i32 {
	cmd := 'node ${$BAITEXE} ${dir}/${file}'
	code := os.system(cmd)

	if code == 0 {
		println('OK ${file}')
		return 0
	}

	eprintln('FAIL ${file}')
	return 1
}

pub fun build_files_in_dir(dir string) {
	mut fails := 0
	files := os.ls(dir)

	for file in files {
		if not file.ends_with('.bt') {
			continue
		}

		fails += build_file(dir, file)
	}

	if fails > 0 {
		exit(1)
	}
}
