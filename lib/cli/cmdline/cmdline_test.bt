import cli.cmdline

fun test_parse_string_whitespace() {
	inp := '--foo -a   bc d'
	exp := ['--foo', '-a', 'bc', 'd']
	assert cmdline.parse_string(inp) == exp
}

fun test_parse_string_quoted() {
	inp := '-s "w spa  ce"'
	exp := ['-s', 'w spa  ce']
	assert cmdline.parse_string(inp) == exp
}

fun test_parse_string_quotes_mixed() {
	inp := '"a a" "s\'" \'"d\' \'b b\''
	exp := ['a a', "s'", '"d', 'b b']
	assert cmdline.parse_string(inp) == exp
}
