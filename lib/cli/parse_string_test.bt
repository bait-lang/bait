import cli

fun test_whitespace() {
	inp := '--foo -a   bc d'
	exp := ['--foo', '-a', 'bc', 'd']
	assert cli.parse_string(inp) == exp
}

fun test_quotes() {
	inp := '-s "w spa  ce"'
	exp := ['-s', 'w spa  ce']
	assert cli.parse_string(inp) == exp
}

fun test_mixed_quotes() {
	inp := '"a a" "s\'" \'"d\' \'b b\''
	exp := ['a a', "s'", '"d', 'b b']
	assert cli.parse_string(inp) == exp
}
