fun result_fun(give_error bool) !i32 {
	if give_error {
		return error('my message')
	}
	return 1
}

fun test_result() {
	a := result_fun(false) or { assert false }
	assert a == 1

	b := result_fun(true) or {
		-5
	}
	assert b == -5
}

fun get_false() bool {
	return false
}

fun test_or_infix() {
	assert get_false() or true
}
