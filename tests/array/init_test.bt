fun test_init_with_length() {
	a := []i32{ length = 2 }
	assert a == [0, 0]

	b := []string{ length = 3 }
	assert b == ["", "", ""]
}

fun test_typeless_init() {
	// Assign
	mut a := [1,2,3]
	a = []
	assert a.length == 0

	// Assign. Name on the next line is not treated as the element type
	mut b := ['']
	b = []
	myvar := 12
	assert b.length == 0
	assert myvar == 12

	// Call arg
	assert takes_arr([])
}

struct Foo{
	mut arr []string
}

fun test_struct_field_array_type(){
	mut f := Foo{
		arr = ['a', 'b']
	}
	f.arr = []
	assert f.arr.length == 0
}

fun takes_arr(a []i32) bool {
	return true
}
