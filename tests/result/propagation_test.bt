fun err_fun(give_error bool) !i32 {
	return error('throw')
}

fun propagates_err() !i32 {
	err_fun(true)!
	return 0
}

fun result_data_fun() !i32 {
	return 3
}

fun test_error_propagation() {
	p := propagates_err() or {
		assert err == 'throw'
		2
	}
	assert p == 2
}

fun test_value_propagation() {
	res := result_data_fun() or {
		assert false
		return
	}
	assert res == 3
}
