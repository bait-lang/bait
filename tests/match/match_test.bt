type Int := i32

const INT_1 := 1 as Int
const INT_5 := 5 as Int

fun test_type_alias(){
	mut a := 0

	i := 5 as Int
	match i {
		INT_1 { assert false }
		INT_5 { a += 1 }
		else { assert false }
	}

	assert a == 1
}

enum Color {
	red
	green
	blue
}

fun test_exhaustive_enum() {
	mut ok := 0

	c := Color.green
	match c {
		.red { assert false }
		.green { ok += 1 }
		.blue { assert false }
	}

	assert ok == 1
}

struct Mars{}
struct Venus{}
type Planet := Mars | Venus

fun test_exhaustive_sumtype() {
	mut ok := 0

	p := Mars{} as Planet
	match p {
		Mars { ok += 1}
		Venus { assert false }
	}

	assert ok == 1
}
