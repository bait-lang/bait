struct Foo[T]{
	mut x T
	global y T
}

fun test_generic_struct() {
	a := Foo[i32]{
		x = 1
	}
	assert a.x == 1

	b := Foo[string]{
		x = "foo"
	}
	assert b.x == "foo"
}

fun test_generic_struct_field_assign() {
	mut f := Foo[i32]{}
	f.x = 1
	f.y = f.x + 2

	assert f.y == 3
}
