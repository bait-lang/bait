struct Account{
	balance i32 := 50
}

fun test_default_field_value() {
	a := Account{}
	assert a.balance == 50
}

type Int := i32
type Number := i8 | i16 | i32 | i64

struct Foo{
	m i32
	i Int
	n Number := 5
}

fun test_alias_default_value(){
	f := Foo{}
	assert f.m == 0
	assert f.i == 0 as Int
	assert f.n == 5
}

struct Math {
	default i32
}

fun test_reserved_names() {
	mut m := Math{}
	assert m.default == 0

	n := Math{
		default = 1
	}
	assert n.default == 1
}
