package main

import os

fun main() {
	if not os.ARGS.contains('--no-backup') {
		os.cp($BAITEXE, 'old_bait.js')
	}
	res := os.exec('node ${$BAITEXE} cli/bait.bt -o bait.js')
	if res.code != 0 {
		eprintln('"bait self" failed:')
		eprintln(res.stderr)
		exit(1)
	}
	println('Bait compiled successfully into "bait.js"')
}
