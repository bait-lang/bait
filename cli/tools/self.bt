package main

import os

fun main() {
	os.chdir($BAITDIR)
	mut args := os.user_args()

	mut out := '-o bait.js'
	if not args.contains('-o') {
		os.cp($BAITEXE, 'old_bait.js')
		args.push(out)
	}

	res := os.exec('node ${$BAITEXE} ${args.join(' ')} cli/bait.bt')
	if res.stdout.length > 0 {
		println(res.stdout)
	}
	if res.stderr.length > 0 {
		eprintln(res.stderr)
	}
	if res.code != 0 {
		eprintln('"bait self" failed:')
		exit(1)
	}
	println('Bait compiled successfully into "bait.js"')
}
