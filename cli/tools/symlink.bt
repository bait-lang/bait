package main

import os

fun main(){
	link_dir := '/usr/local/bin'
	os.mkdir_all(link_dir)
	link_path := link_dir + '/bait'
	if os.exists(link_path) {
		os.rm(link_path)
	}
	exe_path := os.abs_path($BAITEXE.replace('.js', ''))
	os.symlink(exe_path, link_path)
}
