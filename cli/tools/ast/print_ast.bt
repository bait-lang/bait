package main

import os
import bait.preference
import bait.ast
import bait.lexer
import bait.parser

const PRINT_TOKENS := os.ARGS.contains('--tokens')

fun main() {
	args := os.user_args()
	if args.length == 0 {
		eprintln('error: please specify a file to print the ast')
		exit(1)
	}
	file := args[0]
	if not file.ends_with('.bt') {
		eprintln('error: file must have ".bt" extension')
		exit(1)
	}

	text := os.read_file(file)

	if PRINT_TOKENS {
		mut l := lexer.Lexer{}
		l.init(text)
		mut tok := l.next()
		for tok != .eof {
			if tok == .name or tok == .string  {
				println('${tok}: ${l.val}')
			} else {
				println(tok)
			}
			tok = l.next()
		}
		return
	}

	file_ast := parser.parse(text, file, ast.new_table(), preference.Prefs{})
	// TODO handle parser errors, warnings

	println(file_ast)
}
