package main

import os

const TOOLS := ['build-examples', 'build-tools', 'test-lib', 'test-tools']

const TOOLS_WITH_ARGS := map{
	'check-md': ['docs/docs.md', 'README.md']
}

fun main() {
	mut fails := 0

	for tool in TOOLS {
		cmd := 'node ${$BAITEXE} ${tool}'
		code := os.system(cmd)
		if code != 0 {
			fails += 1
		}
	}

	for tool, args in TOOLS_WITH_ARGS {
		for arg_string in args {
			cmd := 'node ${$BAITEXE} ${tool} ${arg_string}'
			code := os.system(cmd)
			if code != 0 {
				fails += 1
			}
		}
	}

	if fails > 0 {
		exit(1)
	}
}
